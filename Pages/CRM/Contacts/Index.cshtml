@page
@using System.Security.Claims
@using Cloud9_2.Models
@using Microsoft.AspNetCore.Identity
@model Cloud9_2.Pages.CRM.Contacts.IndexModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Kontaktok";
}

@await Html.PartialAsync("_CRMSidebar")

<div class="right-content">
    <div class="page-header-fixed-top">
        <!-- Breadcrumb Navigation -->
        <div class="d-flex justify-content-between align-items-center mb-2">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-body-tertiary rounded-3 p-2 mb-0">
                    <li class="breadcrumb-item"><a href="../../">Főoldal</a></li>
                    <li class="breadcrumb-item"><a href="../">CRM Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Kontaktok</li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.TotalRecords
                        kontakt@(Model.TotalRecords != 1 ? "ok" : "") (Page @Model.CurrentPage of @Model.TotalPages)
                    </li>
                </ol>
            </nav>
        </div>

        <!-- Header with Buttons and Search -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="d-flex align-items-center gap-2">
                <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal"
                    data-bs-target="#createContactModal">+ Új Kontakt</button>
            </div>
            <div class="d-flex align-items-center gap-2">
                <form method="get" asp-page="./Index" class="input-group input-group-sm" style="width: 250px;">
                    <input type="hidden" name="pageNumber" value="1" />
                    <input type="hidden" name="pageSize" value="@Model.PageSize" />
                    <input type="text" class="form-control" placeholder="Keresés kontaktokban..." id="searchInput"
                        name="searchTerm" value="@Model.SearchTerm">
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="bi bi-search"></i>
                    </button>
                    @if (!string.IsNullOrEmpty(Model.SearchTerm))
                    {
                        <a href="@Url.Page("./Index")" class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-x"></i>
                        </a>
                    }
                </form>
                <div class="dropdown">
                    <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button"
                        data-bs-toggle="dropdown">
                        <i class="bi bi-funnel me-1"></i>Szűrő
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="@Url.Page("./Index")">Minden Kontakt</a></li>
                        <li><a class="dropdown-item" href="@Url.Page("./Index", new { filter = "active" })">Aktív</a>
                        </li>
                        <li><a class="dropdown-item"
                                href="@Url.Page("./Index", new { filter = "inactive" })">Inaktív</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <!-- Contacts Table -->
        <div class="table-responsive table-dynamic-height" data-page-size="@Model.PageSize">
            <table class="table table-striped table-hover">
                <thead class="sticky-top custom-thead table-blur">
                    <tr>
                        @foreach (var column in new[] { "Név", "Email", "Telefonszám", "Beosztás", "Státusz",
                                                "Létrehozva", "Frissítve" })
                        {
                            <th class="text-nowrap">@column</th>
                        }
                        <th class="text-nowrap">Műveletek</th>
                    </tr>
                </thead>
                <tbody id="contactsTableBody"></tbody>
                <tbody>
                    <tr id="contactsEmptyRow" class="d-none">
                        <td colspan="8" class="text-center">
                            <div class="alert alert-warning mb-0" role="alert">
                                Nincsenek kontaktok.
                            </div>
                        </td>
                    </tr>
                </tbody>

            </table>
        </div>

        <div class="d-flex justify-content-center my-3">
            <div id="loadMoreContainer" class="d-flex justify-content-center my-3">
                <button id="loadMoreBtn" class="btn btn-outline-secondary btn-sm">Több betöltése</button>
                <div id="loadMoreSpinner" class="spinner-border spinner-border-sm ms-2 d-none" role="status"></div>
            </div>

        </div>

    </div>
</div>

@await Html.PartialAsync("_Modals")

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/Contact/contactFilter.js"></script>
    <script src="~/js/Contact/viewContact.js"></script>
    <script src="~/js/Contact/editContact.js"></script>
}