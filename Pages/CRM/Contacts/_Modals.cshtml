
<!-- Create Contact Modal -->
<div class="modal fade" id="createContactModal" tabindex="-1" aria-labelledby="createContactLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content rounded-3 shadow-lg">
            <div class="modal-header py-2 bg-primary text-white">
                <h5 class="modal-title" id="createContactLabel">Új Kontakt létrehozása</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Bezárás"></button>
            </div>
            <div class="modal-body">
                <form id="createContactForm" method="post" asp-page-handler="CreateContact">
                    @Html.AntiForgeryToken()
                    <!-- Basic Information -->
                    <h5 class="mb-2">Alap információk</h5>
                    <br>
                    <div class="row g-3">
                        <div class="col-md-6 mb-3">
                            <label for="createFirstName" class="form-label fw-bold">Vezetéknév</label>
                            <input type="text" class="form-control" id="createFirstName" name="firstName" maxlength="100">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="createLastName" class="form-label fw-bold">Keresztnév</label>
                            <input type="text" class="form-control" id="createLastName" name="lastName" maxlength="100">
                        </div>
                    </div>
                    <!-- Contact Information -->
                    <hr class="my-4">
                    <h5 class="mb-2">Kapcsolatfelvételi adatok</h5>
                    <br>
                    <div class="row g-3">
                        <div class="col-md-6 mb-3">
                            <label for="createEmail" class="form-label fw-bold">E-mail</label>
                            <input type="email" class="form-control" id="createEmail" name="email" maxlength="255">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="createPhoneNumber" class="form-label fw-bold">Telefonszám</label>
                            <input type="tel" class="form-control" id="createPhoneNumber" name="phoneNumber" maxlength="20">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="createPhoneNumber2" class="form-label fw-bold">Második telefonszám</label>
                            <input type="tel" class="form-control" id="createPhoneNumber2" name="phoneNumber2" maxlength="20">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="createJobTitle" class="form-label fw-bold">Beosztás</label>
                            <input type="text" class="form-control" id="createJobTitle" name="jobTitle" maxlength="100">
                        </div>
                    </div>
                    <!-- Assignment Information -->
                    <hr class="my-4">
                    <h5 class="mb-2">Hozzárendelés</h5>
                    <br>
                    <div class="row g-3">
                        <div class="col-md-6 mb-3">
                            <label for="createStatusId" class="form-label fw-bold">Státusz</label>
                            <select class="form-select" id="createStatusId" name="statusId">
                                <option value="">-- Válassz státuszt --</option>
                                @foreach (SelectListItem status in Model.Statuses)
                                {
                                    <option value="@status.Value">@status.Text</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="createPartnerId" class="form-label fw-bold">Partner</label>
                            <select class="form-select" id="createPartnerId" name="partnerId">
                                <option value="">-- Válassz partnert --</option>
                                @foreach (SelectListItem partner in Model.Partners)
                                {
                                    <option value="@partner.Value">@partner.Text</option>
                                }
                            </select>
                        </div>
                    </div>
                    <!-- Additional Settings -->
                    <hr class="my-4">
                    <h5 class="mb-2">További beállítások</h5>
                    <br>
                    <div class="row g-3">
                        <div class="col-12 mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="createIsPrimary" name="isPrimary" value="true">
                                <label class="form-check-label fw-bold" for="createIsPrimary">Elsődleges kontakt</label>
                            </div>
                        </div>
                    </div>
                    <!-- Notes -->
                    <hr class="my-4">
                    <h5 class="mb-2">Jegyzetek</h5>
                    <br>
                    <div class="row g-3">
                        <div class="col-md-12 mb-3">
                            <label for="createComment" class="form-label fw-bold">Megjegyzés</label>
                            <textarea class="form-control" id="createComment" name="comment" rows="3" maxlength="1000"></textarea>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label for="createComment2" class="form-label fw-bold">További megjegyzés</label>
                            <textarea class="form-control" id="createComment2" name="comment2" rows="3" maxlength="1000"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Mégse</button>
                        <button type="submit" class="btn btn-primary" id="createSubmitBtn">
                            <i class="bi bi-save"></i> Mentés
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

