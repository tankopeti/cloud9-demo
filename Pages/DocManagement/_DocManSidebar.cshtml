@using Cloud9_2.Helpers
@inject Microsoft.AspNetCore.Mvc.Rendering.IHtmlHelper<dynamic> Html

@* --- MODIFICATION --- *@
@* Add class="left-sidebar" and remove inline style="width: 200px;" *@
<div class="left-sidebar d-flex flex-column flex-shrink-0"> @* Keep border-end or remove if handled by CSS *@
    @* --- END MODIFICATION --- *@

    <div class="pt-3">
        @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin") || User.IsInRole("DocManUser"))
        {
            <ul class="nav flex-column">
                <li class="nav-item">

                    <a class="nav-link px-3 py-2 @(Html.IsActive("Doc/Search", "DocManagement") ? "active" : "")"
                        asp-page="/DocManagement/Search/Index">
                        <i class="bi bi-search me-2"></i>Keresés
                    </a>

                    <a class="nav-link px-3 py-2 @(Html.IsActive("Doc/Index", "DocManagement") ? "active" : "")"
                        asp-page="/DocManagement/Doc/Index">
                        <i class="bi bi-folder2-open me-2"></i>Dokumentumok
                    </a>

<a class="nav-link px-3 py-2 @(Html.IsActive("DocIn/Index", "DocManagement") ? "active" : "")"
   asp-page="/DocManagement/DocIn/Index">
  <i class="bi bi-inbox me-2"></i>Bejövő iktatás
</a>

<a class="nav-link px-3 py-2 @(Html.IsActive("DocOut/Index", "DocManagement") ? "active" : "")"
   asp-page="/DocManagement/DocOut/Index">
  <i class="bi bi-send me-2"></i>Kimenő iktatás
</a>

                    <a class="nav-link px-3 py-2 @(Html.IsActive("Contracts/Index", "DocManagement") ? "active" : "")"
                        asp-page="/BusinessDocument/Contract/Index">
                        <i class="bi bi-file-earmark-text me-2"></i>Szerződések
                    </a>

                </li>
            </ul>
        }
    </div>
</div>