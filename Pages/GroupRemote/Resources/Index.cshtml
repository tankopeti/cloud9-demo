@page
@using Cloud9_2.Models
@using System.Globalization
@model Cloud9_2.Pages.GroupRemote.Resources.IndexModel
@{
    ViewData["Title"] = "Eszközök";
    Layout = "_Layout";
}

@await Html.PartialAsync("_GroupRemoteSidebar")

<div class="right-content">
    <div class="page-header-fixed-top">
        <!-- Breadcrumb -->
        <div class="d-flex justify-content-between align-items-center mb-2">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-body-tertiary rounded-3 p-2 mb-0">
                    <li class="breadcrumb-item"><a href="../../">Főoldal</a></li>
                    <li class="breadcrumb-item"><a href="/GroupRemote/Dashboard">Group Remote</a></li>
                    <li class="breadcrumb-item active">Eszközök</li>
                </ol>
            </nav>
        </div>

        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#newResourceModal">
                + Új eszköz
            </button>

            <div class="d-flex gap-2">
                <form method="get" asp-page="./Index" class="input-group input-group-sm" style="width: 250px;">
                    <input type="text" class="form-control" placeholder="Keresés..." name="SearchTerm" value="@Model.SearchTerm">
                    <input type="hidden" name="pageSize" value="@Model.PageSize" />
                    <button class="btn btn-outline-secondary" type="submit">Search Icon</button>
                    @if (!string.IsNullOrEmpty(Model.SearchTerm))
                    {
                        <a href="@Url.Page("./Index")" class="btn btn-outline-danger btn-sm">Clear Icon</a>
                    }
                </form>
                <div class="dropdown">
                    <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        Filter Icon Rendezés
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#" data-sort="CreatedDate" data-order="desc">Legújabb</a></li>
                        <li><a class="dropdown-item" href="#" data-sort="Name" data-order="asc">Név A-Z</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Table -->
        <div class="table-responsive" style="max-height: 70vh; overflow-y: auto;">
            <table class="table table-striped table-hover">
                <thead class="sticky-top custom-thead">
                    <tr>
                        @foreach (var column in new[] { "Name", "ResourceType", "Status", "Serial", "PurchaseDate", "Price", "LastModified" })
                        {
                            <th class="text-nowrap">
                                @(column == "Name" ? "Név" :
                                  column == "ResourceType" ? "Típus" :
                                  column == "Status" ? "Státusz" :
                                  column == "Serial" ? "Sorozatszám" :
                                  column == "PurchaseDate" ? "Vétel" :
                                  column == "Price" ? "Ár" :
                                  column == "LastModified" ? "Módosítva" : column)
                            </th>
                        }
                        <th class="text-nowrap">Műveletek</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Resources.Any())
                    {
                        @foreach (var r in Model.Resources)
                        {
                            <tr data-resource-id="@r.ResourceId">
                                <td class="text-nowrap"><i class="bi bi-wrench me-1"></i>@r.Name</td>
                                <td class="text-nowrap"><i class="bi bi-tag me-1"></i>@r.ResourceTypeName</td>
                                <td class="text-nowrap">
                                    @{
                                        var statusColor = r.ResourceStatusName switch
                                        {
                                            "Active" => "#28a745",
                                            "Inactive" => "#dc3545",
                                            "In Service" => "#ffc107",
                                            _ => "#6c757d"
                                        };
                                    }
                                    <span class="badge" style="background-color:@statusColor">
                                        @r.ResourceStatusName
                                    </span>
                                </td>
                                <td class="text-nowrap"><i class="bi bi-upc me-1"></i>@r.Serial</td>
                                <td class="text-nowrap">
                                    <i class="bi bi-calendar me-1"></i>
                                    @(r.DateOfPurchase.HasValue 
                                        ? String.Format(CultureInfo.InvariantCulture, "{0:yyyy-MM-dd}", r.DateOfPurchase.Value) 
                                        : "-")
                                </td>
                                <td class="text-nowrap">
                                    <i class="bi bi-currency-euro me-1"></i>
                                    @String.Format(CultureInfo.CreateSpecificCulture("hu-HU"), "{0:C0}", r.Price ?? 0)
                                </td>
                                <td class="text-nowrap">
                                    @if (r.LastModifiedDate.HasValue)
                                    {
                                        <small>@String.Format(CultureInfo.InvariantCulture, "{0:yy-MM-dd HH:mm}", r.LastModifiedDate.Value)</small><br />
                                        <small class="text-muted">@r.LastModifiedByName</small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">Nincs</small>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <!-- VIEW -->
                                        <button type="button"
                                                class="btn btn-outline-info"
                                                onclick="Resources.openViewModal(@r.ResourceId)">
                                            <i class="bi bi-eye"></i>
                                        </button>

                                        <!-- ACTIONS DROPDOWN -->
                                        <div class="dropdown">
                                            <button class="btn btn-outline-secondary dropdown-toggle btn-sm" type="button"
                                                    id="actionsDropdown_@r.ResourceId"
                                                    data-bs-toggle="dropdown"
                                                    aria-expanded="false">
                                                <i class="bi bi-three-dots-vertical"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="actionsDropdown_@r.ResourceId">
                                                <li>
                                                    <a class="dropdown-item" onclick="Resources.openEditModal(@r.ResourceId, true)">
                                                        <i class="bi bi-pencil-square me-2"></i>Szerkesztés
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item btn-show-history" data-resource-id="@r.ResourceId">
                                                        <i class="bi bi-clock-history me-2"></i>Előzmények
                                                    </a>
                                                </li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li>
                                                    <a class="dropdown-item text-danger" onclick="Resources.openDeleteModal(@r.ResourceId)">
                                                        <i class="bi bi-trash me-2"></i>Deaktiválás
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center py-4">
                                <div class="alert alert-warning" role="alert">
                                    @if (!string.IsNullOrEmpty(Model.SearchTerm))
                                    {
                                        @:Nincs találat a "@Model.SearchTerm" keresésre az @Model.CurrentPage. oldalon.
                                    }
                                    else if (Model.TotalRecords > 0)
                                    {
                                        @:Nincs eszköz az @Model.CurrentPage. oldalon, de @Model.TotalRecords eszköz létezik. Próbáljon másik oldalt vagy szűrőt.
                                    }
                                    else
                                    {
                                        @:Nincs eszköz. 
                                        <button type="button" class="btn btn-link alert-link p-0 align-baseline" 
                                                data-bs-toggle="modal" data-bs-target="#newResourceModal">
                                            Hozza létre az elsőt?
                                        </button>
                                    }
                                    <div class="mt-2 small text-muted">
                                        Debug: Page=@Model.CurrentPage, PageSize=@Model.PageSize, TotalRecords=@Model.TotalRecords, SearchTerm="@Model.SearchTerm"
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @await Html.PartialAsync("~/Pages/Shared/_PaginationFooter.cshtml", new PaginationViewModel
        {
            CurrentPage = Model.CurrentPage,
            TotalPages = Model.TotalPages,
            PageSize = Model.PageSize,
            SearchTerm = Model.SearchTerm,
            PageRoute = "./Index",
            EntityName = "Eszközök"
        })
    </div>

    <!-- Toast Container -->
    <div id="toastContainer" class="position-fixed bottom-0 end-0 p-3" style="z-index: 1100;"></div>
</div>

<!-- Include Modals -->
@await Html.PartialAsync("_Modals")

@section Scripts {
    <script src="~/js/resources.js"></script>
}
