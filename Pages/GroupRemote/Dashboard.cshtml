@page
@model Cloud9_2.Pages.GroupRemote.DashboardModel
@using System.Globalization
@{
    ViewData["Title"] = "Group Remote – Dashboard";
    Layout = "_Layout";
}

@await Html.PartialAsync("_GroupRemoteSidebar")

<div class="right-content">
    <!-- Header + Breadcrumb -->
    <div class="page-header-fixed-top">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-body-tertiary rounded-3 p-3 mb-0">
                    <li class="breadcrumb-item"><a href="/">Főoldal</a></li>
                    <li class="breadcrumb-item"><a href="/GroupRemote/Index">Group Remote</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
                </ol>
            </nav>
            <div class="text-end">
                <span class="text-muted small">Utolsó frissítés: @Model.LastUpdate</span>
            </div>
        </div>
    </div>

    <div class="container-fluid px-4">

        <!-- Stats Cards -->
        <div class="row">
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Futó feladatok</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.RunningTasks</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-play-circle fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-warning shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Függőben lévő</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.PendingTasks</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-clock fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-danger shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Hibák ma</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.FailedTasksToday</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-info shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Feladatok ma</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalTasksToday</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-tasks fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Chart + Recent Tasks -->
        <div class="row">
            <!-- Area Chart -->
            <div class="col-xl-8 col-lg-7">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Létrehozott feladatok (utolsó 30 nap)</h6>
                    </div>
                    <div class="card-body">
                        <div class="chart-area" style="height: 320px;">
                            <canvas id="myAreaChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Tasks -->
            <div class="col-xl-4 col-lg-5">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Legutóbbi feladatok</h6>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            <a href="/GroupRemote/Tasks" class="list-group-item list-group-item-action text-center text-primary">
                                Hamarosan valós adatokkal
                            </a>
                        </div>
                        <div class="mt-3 text-center">
                            <a href="/GroupRemote/Tasks" class="btn btn-primary btn-sm">Összes feladat</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const labels = [@Html.Raw(string.Join(",", Model.ChartLabels.Select(l => $"\"{l}\"")))];
        const data = [@Html.Raw(string.Join(",", Model.ChartData))];

        const ctx = document.getElementById('myAreaChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Létrehozott feladatok',
                    data: data,
                    backgroundColor: 'rgba(78, 115, 223, 0.1)',
                    borderColor: '#4e73df',
                    borderWidth: 3,
                    tension: 0.4,
                    fill: true,
                    pointRadius: 4,
                    pointBackgroundColor: '#4e73df',
                    pointHoverRadius: 6
                }]
            },
            options: {
                maintainAspectRatio: false,
                scales: {
                    y: { beginAtZero: true, ticks: { stepSize: 1 } },
                    x: { grid: { display: false } }
                },
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        callbacks: {
                            label: ctx => `${ctx.parsed.y} feladat`
                        }
                    }
                },
                animation: { duration: 1500 }
            }
        });
    </script>
}